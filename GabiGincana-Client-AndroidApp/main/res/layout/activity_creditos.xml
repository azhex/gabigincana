<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_creditos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/draw_blue_background"
    tools:context="com.azhex.gabigincana.principal.CreditosActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnBack"
        android:layout_centerHorizontal="true"
        android:background="@drawable/draw_main_box"
        android:layout_margin="10dp"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gincana creditos"
                android:textAlignment="center"
                android:textSize="25dp"
                android:layout_marginBottom="10dp"
                android:textStyle="normal|bold"
                android:fontFamily="sans-serif-condensed" />

            <TextView
                android:text="@string/creditos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvDesarrolladores"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold|italic"
                android:layout_marginTop="15dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:text="Volver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnBack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        style="@style/Widget.AppCompat.Button.Colored"/>
</RelativeLayout>
